<%= link_to "Enter new user information!", "/users/new" %> <br/>
<hr>
<% if !@users.empty? %>
  Display the last user's information:
  <hr>
  Name: <%= @users.order("created_at").last.name %> <br/>
  Email Address: <%= @users.order("created_at").last.email %> <br/>
  Mailing Address: <%= @users.order("created_at").last.address %> <br/>
  Message: <%= @users.order("created_at").last.message %>

  <div style='width: 800px;'>
    <div id="map" style='width: 800px; height: 400px;'></div>
  </div>
  
  <script src="//maps.google.com/maps/api/js?key=[your API key]"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->


<% end %>
